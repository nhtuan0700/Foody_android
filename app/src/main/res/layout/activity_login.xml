<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounnd"
    android:orientation="vertical"
    tools:context=".activity_login">
    <ImageView
        android:id="@+id/btn_back"
        android:focusable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập hoặc Đăng Ký"
        android:textColor="#fff"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1">
        <Button
            style="@style/button_login"
            android:drawableLeft="@drawable/ic_smartphone"
            android:text="Đăng nhập với Số điện thoại"
            app:backgroundTint="@color/green"
            android:letterSpacing="0.05"/>
        <Button
            style="@style/button_login"
            android:drawableLeft="@drawable/ic_facebook"
            android:text="Đăng nhập với Facebook"
            app:backgroundTint="#0493EC"
            android:letterSpacing="0.05"/>
        <Button
            android:drawableLeft="@drawable/ic_google"
            android:text="Đăng nhập với Google"
            style="@style/button_login"
            app:backgroundTint="#ED1B1B"
            android:letterSpacing="0.05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Hoặc đăng nhập bằng tài khoản của bạn"
            android:textColor="#DFD1D1"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/body_edittext"
            android:drawableLeft="@drawable/ic_baseline_mail"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:textColorHint="#DFD1D1"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <EditText
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/body_edittextpass"
            android:drawableLeft="@drawable/ic_baseline_lock"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"
            android:textColorHint="#DFD1D1"
            android:textSize="16sp"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btdangnhap"
            style="@style/button_login"
            android:text="Đăng Nhập"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            android:letterSpacing="0.05"/>

        <TextView
            android:id="@+id/tvqmk"
            style="@style/Hyperlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Quên mật khẩu"
            android:textColor="#DFD1D1"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi không sử dụng thông tin của bạn với bất kỳ mục đích nào."
            android:textColor="#DFD1D1"
            android:gravity="center"
            android:textSize="13sp">
        </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bằng cách đăng nhập hoặc đăng ký, bạn đồng ý với"
                android:textColor="#DFD1D1"
                android:textSize="13sp"
                android:gravity="center">
            </TextView>
            <TextView
                android:textColor="#2738A9"
                android:textSize="14sp"
                style="@style/Hyperlinkblue"
                android:layout_marginLeft="3dp"
                android:text="Chính sách quy định"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
</LinearLayout>