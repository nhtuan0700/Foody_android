<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_booking"
    android:orientation="vertical"
    android:background="#DDD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed1c24"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_back"
                android:cropToPadding="true"
                android:padding="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"/>
                <EditText
                    android:id="@+id/ed_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tìm nhà hàng, đặt chỗ, khuyến mãi"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:autofillHints=""
                    android:padding="0dp"
                    android:textSize="13sp"
                    android:background="@null"
                    android:focusable="true"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đà Nẵng"
                    android:textColor="#888"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="Đặt bàn"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt chỗ cho Hôm nay 10:00, 2 Người lớn"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_birth"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Sinh nhật"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_buffet"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Buffet"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_seafood"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Hải sản"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_china"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Món Hoa"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_pizza"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/booking_sushi"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="Sushi"
                            android:textColor="#333"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi đặt biệt"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_marginVertical="8dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF"
                android:layout_marginTop="8dp">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextAppearance="@style/MyCustomTextAppearance2"
                    app:tabTextColor="#000"
                    app:tabSelectedTextColor="#0287e0"
                    app:tabIndicatorColor="#0287e0"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="fixed"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingEnd="0dp"
                    android:paddingBottom="5dp">
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nổi bật"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Đặt nhiều"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mới"/>
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Gần tôi"/>
                </com.google.android.material.tabs.TabLayout>
                <com.example.foody.adapter.CustomViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>