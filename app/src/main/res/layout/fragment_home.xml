<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DDD"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:background="#D5131B"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="Tìm địa điểm, món ăn địa chỉ..."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đà Nẵng"
                    android:textColor="#666"
                    android:textSize="13sp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#fff"
                    android:orientation="vertical">
                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carouse"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:pageColor="#2F000000"
                        app:fillColor="#48000000"
                        app:radius="4dp"
                        app:strokeColor="#4D000000"
                        app:strokeWidth="1dp"
                        app:pageTransformInterval="1500"
                        app:slideInterval="5000"
                        app:indicatorMarginVertical="0dp"
                        app:indicatorMarginHorizontal="10dp"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:id="@+id/discovery"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/discovery"
                                app:riv_corner_radius="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khám phá"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/delivery"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            android:paddingHorizontal="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/delivery"
                                app:riv_corner_radius="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Giao hàng"
                                android:textStyle="bold"
                                android:textColor="#000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/booking"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/booking"
                                app:riv_corner_radius="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đặt chỗ"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:gravity="center">
                        <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        app:tabIndicatorHeight="0dp"
                        app:tabTextAppearance="@style/MyCustomTextAppearance"
                        app:tabSelectedTextColor="#000"
                        app:tabMode="fixed"
                        app:tabPaddingStart="0dp"
                        app:tabPaddingEnd="0dp"
                        android:singleLine="true">
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Xem gần đây"/>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Gần tôi"/>
                    </com.google.android.material.tabs.TabLayout>
                    <com.example.foody.adapter.CustomViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent">
                    </com.example.foody.adapter.CustomViewPager>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>