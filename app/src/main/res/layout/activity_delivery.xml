<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_delivery">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:background="#ed1c24"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_back"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ImageView>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_input"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="Tìm địa điểm, món ăn địa chỉ..."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đà Nẵng"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:textStyle="bold"
                    android:text="Đến"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:text="202 Lý Tự Trọng, Thanh Binh, Hải Châu, Đà Nẵng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:indicatorVisibility="invisible"
                    app:pageTransformInterval="1500"
                    app:slideInterval="4000"
                    app:indicatorMarginVertical="0dp"
                    app:indicatorMarginHorizontal="10dp"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="left"
                            android:text="Bộ sưu tập"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:gravity="right"
                            android:text="Thêm"
                            android:textColor="@color/black"
                            android:drawableRight="@drawable/ic_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:overScrollMode="never">
                        <LinearLayout
                            android:id="@+id/linearlayout_horizon"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/banner2"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:scaleType="fitXY"/>
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/banner3"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:scaleType="fitXY"/>
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/banner4"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"/>
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/banner5"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/banner1"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none"
                        android:overScrollMode="never">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_expand"
                                android:text="All"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>
                            <TextView
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_chicken"
                                android:text="Đồ ăn"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>
                            <TextView
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_drink"
                                android:text="Đồ uống"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/ic_pizza"
                                android:gravity="center_horizontal"
                                android:text="Pizza/Burger"
                                android:textSize="13sp" />

                            <TextView
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_diet"
                                android:text="Đồ chay"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>
                            <TextView
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_cake"
                                android:text="Bánh kem"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#DDD"/>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:tabTextAppearance="@style/MyCustomTextAppearance"
                        app:tabSelectedTextColor="#0287e0"
                        app:tabIndicatorColor="#0287e0"
                        app:tabIndicatorHeight="2dp"
                        app:tabMode="fixed"
                        app:tabIndicatorFullWidth="false"
                        app:tabPaddingStart="0dp"
                        app:tabPaddingEnd="0dp"
                        android:background="#FFF">
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab1"
                            android:text="Gần tôi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </com.google.android.material.tabs.TabItem>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab2"
                            android:text="Bán chạy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </com.google.android.material.tabs.TabItem>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab3"
                            android:text="Đánh giá"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </com.google.android.material.tabs.TabItem>
                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/tab4"
                            android:text="Chạy nhanh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </com.google.android.material.tabs.TabItem>
                    </com.google.android.material.tabs.TabLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#DDD"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>